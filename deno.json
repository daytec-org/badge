{
  "version": "0.0.2",
  "tasks": {
    "dev": "DEV_MODE=true deno run --allow-env --env-file=.env --allow-net --allow-read --watch main.ts",
    "start": "deno run --allow-env --env-file=.env --allow-net --allow-read main.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "@deno/emit": "jsr:@deno/emit@^0.46.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@1",
    "~/": "./",
    "react": "npm:react",
    "react-dom": "npm:react-dom@^18.2.0",
    "reactTypes": "npm:@types/react@^18.3",
    "react-dom/client": "npm:react-dom@18.2.0/client",
    "react/jsx-runtime": "npm:react@18.2.0/jsx-runtime"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["server/", "client/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  }
}
